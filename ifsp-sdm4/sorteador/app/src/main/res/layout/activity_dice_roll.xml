<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ptofanelli.sorteador.view.DiceRollActivity"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@mipmap/board">

    <Button
        android:id="@+id/dice_roll_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dice_roll_roll_dices"
        android:textStyle="bold"
        android:textSize="30dp"
        android:background="@color/colorAccent"/>

    <TextView
        android:id="@+id/dice_roll_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Results"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="30sp"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:rowCount="3"
        android:columnCount="2">

        <ImageView
            android:id="@+id/dice1_imageview"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="5dp"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/dice2_imageview"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="5dp"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/dice3_imageview"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="5dp"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/dice4_imageview"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="5dp"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/dice5_imageview"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="5dp"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/dice6_imageview"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="5dp"
            android:layout_gravity="center"/>
    </GridLayout>



</LinearLayout>

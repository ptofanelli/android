<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ptofanelli.sorteador">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/dice_green"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/dice_green"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.ChessClockActivity"
            android:label="Chess Clock" />
        <activity
            android:name=".view.DiceRollsActivity"
            android:label="@string/title_activity_dice_rolls"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".view.DiceRollActivity" android:label="@string/title_activity_dice_roll"></activity>
    </application>

</manifest>